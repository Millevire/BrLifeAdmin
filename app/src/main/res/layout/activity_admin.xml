<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mantenedor"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />
    <View android:layout_width="wrap_content"
        android:layout_height="0.2dp"
        android:background="#000000"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Producto:"
            android:textColor="@color/colorPrimary" />
        <Button
            android:id="@+id/btnProducto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Producto"
            android:textColor="@color/blanco" />

        <Button
        android:id="@+id/btnTipoProducto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_action_next"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="tipo producto"
        android:textColor="@color/blanco" />

        <Button
            android:id="@+id/btnSabor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Sabor"
            android:textColor="@color/blanco" />
        <Button
            android:id="@+id/btnMarca"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Marca"
            android:textColor="@color/blanco" />
        <Button
            android:id="@+id/btnNutriente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Nutriente"
            android:textColor="@color/blanco" />

        <View android:layout_width="wrap_content"
            android:layout_height="0.2dp"
            android:background="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Usuario:"
            android:textColor="@color/colorPrimary" />
        <Button
            android:id="@+id/btnRegiones"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Regiones"
            android:textColor="@color/blanco" />
        <Button
            android:id="@+id/btnProvincia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Provincia"
            android:textColor="@color/blanco" />
        <Button
            android:id="@+id/btnComuna"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Comuna"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/btnRol"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Rol"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/btnInteres"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Interes"
            android:textColor="@color/blanco" />
        <Button
            android:id="@+id/btnTipoPersona"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Tipo Persona"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/btnObjetivo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Objetivo"
            android:textColor="@color/blanco" />

        <View android:layout_width="wrap_content"
            android:layout_height="0.2dp"
            android:background="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Registro Comida Usuario:"
            android:textColor="@color/colorPrimary" />
        <Button
            android:id="@+id/btnHorarioComida"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_action_next"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="HORARIO COMIDA"
            android:textColor="@color/blanco" />
    </LinearLayout>
</ScrollView>

</LinearLayout>