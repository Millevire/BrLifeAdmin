<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/doscolores"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitutloAlertNuevoTipoProducto"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:text="Nuevo Tipo Producto"
                    android:textAlignment="center"
                    android:textColor="@color/blanco" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/input"
                >

                <EditText
                    android:id="@+id/etAlertMantenedorTipoProducto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null" />


            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <Switch
        android:id="@+id/switchMarca"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Variedad Marca" />

    <Switch
        android:id="@+id/switchSabor"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Variedad Sabor" />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    android:id="@+id/btnCancelarAlertNuevoTipoProduto"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="CANCELAR"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnAceptarlarAlertNuevoTipoProduto"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="Aceptar"
                    android:textColor="@color/blanco"
                    android:textSize="12sp" /></LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>