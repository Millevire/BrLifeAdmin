<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/doscolores"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTitutloAlertProductoNutriente"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:text="Nuevo Nutriente"
                    android:textAlignment="center"
                    android:textColor="@color/blanco" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/input"
                >


                <EditText
                    android:id="@+id/etAlertProductoNutrienteValor"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:hint="Valor"
                    android:digits="0123456789."

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAlertProductoNutriente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutriente"
                    android:textColor="@color/colorPrimaryDark" />

                <Spinner
                    android:id="@+id/spAlertProductoNutriente"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCancelarAlertProductoNutriente"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="CANCELAR"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnAceptarAlertProductoNutriente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="Aceptar"
                    android:textColor="@color/blanco"
                    android:textSize="12sp" /></LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>